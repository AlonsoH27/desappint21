@page "/FilmGenres"
@using segundoexamenparcial.Modelo;

<h3>Informaci√≥n sobre film genres</h3>

<NavLink class="nav-link" href="AgregarFilmGenres">
    <span class="oi oi-plus">Agregar film genres</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
} else {
    <table class="table">
        <thead>
            <th>Film genres Id</th>
            <th>Genre</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {
            <tr>
                <td>@i.filmGenresID</td>
                <td>@i.Genre</td>
                    <td>
                    <a class="nav-link" href="EditarFilmGenres/@i.filmGenresID">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                     <a class="nav-link" href="EliminarFilmGenres/@i.filmGenresID">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>

    </table>
}


@code {
    List<filmGenres> obj;
        
}