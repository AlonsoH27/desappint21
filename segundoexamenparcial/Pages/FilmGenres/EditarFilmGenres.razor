@page "/EditarFilmGenres"
@inject NavigationManager NavigationManager

<h3>Editar film genres</h3>

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label for="filmGenresID" class="control-label">Film genres Id</label>
            <input type="text" id="filmGenresID" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Genre" class="control-label">Genre</label>
            <input type="text" id="Genre" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" >Guardar</button>
        <button type="button" class="btn btn-primary" >Cancelar</button>
    </div>
</div>