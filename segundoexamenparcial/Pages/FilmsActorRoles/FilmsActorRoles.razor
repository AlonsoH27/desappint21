@page "/FilmsActorRoles"
@using segundoexamenparcial.Modelo;

<h3>Films actores roles</h3>

<NavLink class="nav-link" href="AgregarFilmsActorRoles">
    <span class="oi oi-plus">Agregar nuevo films actor role</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>    
} else {
    <table class="table">
        <thead>
            <th>Films actor role Id</th>
            <th>Films title Id</th>
            <th>Actor Id</th>
            <th>Role type Id</th>
            <th>Character name</th>
            <th>Character descripcion</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {
            <tr>
                <td>@i.filmsActorRolesId</td>
                <td>@i.filmTitleId</td>
                <td>@i.actorId</td>
                <td>@i.roleTypeId</td>
                <td>@i.characterName</td>
                <td>@i.characterDescription</td>
                    <td>
                    <a class="nav-link" href="EditarFilmsActorRole/@i.filmsActorRolesId">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                     <a class="nav-link" href="EliminarFilmsActorRole/@i.filmsActorRolesId">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
    </table>
}


@code {
    List<filmsActorRoles> obj;
}