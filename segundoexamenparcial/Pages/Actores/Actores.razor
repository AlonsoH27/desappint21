@page "/Actores"
@using segundoexamenparcial.Modelo;

<h3>Informaci√≥n de Actores</h3>

<NavLink class="nav-link" href="AgregarActores">
    <span class="oi oi-plus">Agregar nuevo actor</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
} else {
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Full name</th>
            <th>Actore notes</th>
            <th>Films actores roles</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {
            <tr>
                <td>@i.actorId</td>
                <td>@i.fullName</td>
                <td>@i.actorNotes</td>
                 <td>
                    <a class="nav-link" href="EditarActor/@i.actorId">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                     <a class="nav-link" href="EliminarActor/@i.actorId">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>

    </table>
}


@code {
    List<Actor> obj;
}