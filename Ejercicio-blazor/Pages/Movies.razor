@page "/Movies"
@using p20_blazorcrud.Data
@inject MovieService movieService

<h3>Employees Info</h3>

<NavLink class="nav-link" href="AddMovies">
    <span class="oi oi-plus">Add New</span>
</NavLink>

@if(EmpObj is null) {
    <p><em>Loading ...</em></p>
}
else {
<table class="table">
    <thead>
        <th>Mov Id</th>
        <th>Movie Name</th>
        <th>year</th>
        <th>classification</th>
        <th>categoria</th>
    </thead>
    <tbody>
        @foreach(var emp in EmpObj) {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.nameMovie</td>
                <td>@emp.year</td>
                <td>@emp.classification</td>
                <td>@emp.category</td>
                <td>
                    <a class="nac-link" href="EditMovies/@emp.Id">
                        <span class="oi oi-pencil">Edit</span>
                    </a>
                    <a class="nac-link" href="DeleteMovies/@emp.Id">
                        <span class="oi oi-trash">Delete</span>
                    </a>
                </td> 
            </tr>
        }
    </tbody>
</table>
}

@code {
    List<Movie> EmpObj;
    protected override void OnInitialized() {
        EmpObj = movieService.GetAllMovie();
    }
}
