@page "/AgregarRol"
@inject NavigationManager NavigationManager
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioRoles serv;

<h3>Agregar rol</h3>

 <div class="row">
    <div class="col-md-8">
    <EditForm Model="@obj" OnValidSubmit="@CrearActor">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="Tipo" class="control-label">Tipo</label>
                <InputText id="Tipo" class="form-control" @bind-Value="obj.Tipo"/>
            </div>
            <button type="submit" class="btn btn-primary" >Guardar</button>
            <button type="button" class="btn btn-primary" @onclick="@Cancelar" >Cancelar</button>
    </EditForm> 
    </div>
 </div>




@code {
    Rol obj = new Rol();

    protected void CrearActor() {
        serv.Insertar(obj);
        NavigationManager.NavigateTo("Roles");
    }
    protected void Cancelar() {
       NavigationManager.NavigateTo("Roles");
    }

}