@page "/Roles"
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioRoles serv

<h3>Informaci√≥n roles</h3>

<NavLink class="nav-link" href="AgregarRol">
    <span class="oi oi-plus">Agregar roles</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
}else {
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Tipo</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {   
            <tr>
                <td>@i.Id</td>
                <td>@i.Tipo</td>
                <td>
                    <a class="nav-link" href="EditarRol/@i.Id">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                    <a class="nav-link" href="EliminarRol/@i.Id">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>


    </table>
}


@code {
    List<Rol> obj;

    protected override void OnInitialized()
    {
        obj = serv.obtenerTodo("");
    }    
}