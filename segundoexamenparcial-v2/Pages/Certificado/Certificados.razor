@page "/Certificados"
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioCertificados serv

<h3>Información certificados </h3>

<NavLink class="nav-link" href="AgregarCertificado">
    <span class="oi oi-plus">Agregar certificados</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
} else {
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Descripción</th>
        </thead>

        <tbody>
            @foreach (var i in obj)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.Descripcion</td>
                    <td>
                        <a class="nav-link" href="EditarCertificado/@i.Id">
                            <span class="oi oi-pencil">Editar</span>
                        </a>
                        <a class="nav-link" href="EliminarCertificado/@i.Id">
                            <span class="oi oi-pencil">Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}


@code {
    List<Certificado> obj;
    
    protected override void OnInitialized()
    {
        obj = serv.obtenerTodo("");
    }

}