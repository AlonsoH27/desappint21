@page "/Productores"
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioProductores serv

<h3>Informaci√≥n actores</h3>

<NavLink class="nav-link" href="AgregarProductor">
    <span class="oi oi-plus">Agregar productor</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
}else {
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Sitio web</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {   
            <tr>
                <td>@i.Id</td>
                <td>@i.Nombre</td>
                <td>@i.Correo</td>
                <td>@i.sitioWeb</td>
                <td>
                    <a class="nav-link" href="EditarProductor/@i.Id">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                    <a class="nav-link" href="EliminarProductor/@i.Id">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>


    </table>
}


@code {
    List<Productor> obj;

    protected override void OnInitialized()
    {
        obj = serv.obtenerTodo("");
    }    
}