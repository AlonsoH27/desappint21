@page "/AgregarGenero"
@inject NavigationManager NavigationManager
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioGenero serv;

<h3>Agregar genero</h3>

 <div class="row">
    <div class="col-md-8">
    <EditForm Model="@obj" OnValidSubmit="@CrearGenero">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="Descripcion" class="control-label">Descripci√≥n</label>
                <InputText id="Descripcion" class="form-control" @bind-Value="obj.Descripcion"/>
            </div>
            <button type="submit" class="btn btn-primary" >Guardar</button>
            <button type="button" class="btn btn-primary" @onclick="@Cancelar" >Cancelar</button>
    </EditForm> 
    </div>
 </div>




@code {
    Genero obj = new Genero();

    protected void CrearGenero() {
        serv.Insertar(obj);
        NavigationManager.NavigateTo("Generos");
    }
    protected void Cancelar() {
       NavigationManager.NavigateTo("Generos");
    }

}