@page "/Generos"
@using segundoexamenparcial_v2.Modelo;
@using segundoexamenparcial_v2.Servicio;
@inject ServicioGenero serv

<h3>Información generos</h3>

<NavLink class="nav-link" href="AgregarGenero">
    <span class="oi oi-plus">Agregar genero</span>
</NavLink>

@if (obj is null)
{
    <p>Cargando . . .</p>
} else {
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Descripción</th>
        </thead>

    <tbody>
        @foreach (var i in obj)
        {   
            <tr>
                <td>@i.Id</td>
                <td>@i.Descripcion</td>
                <td>
                    <a class="nav-link" href="EditarGenero/@i.Id">
                        <span class="oi oi-pencil">Editar</span>
                    </a>
                    <a class="nav-link" href="EliminarGenero/@i.Id">
                        <span class="oi oi-pencil">Eliminar</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>


    </table>
}

@code {
    List<Genero> obj;

    protected override void OnInitialized()
    {
        obj = serv.obtenerTodo("");
    }    
}